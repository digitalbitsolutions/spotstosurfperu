        <div>
            <h3 class="text-white font-bold mb-6">Experiencias</h3>
            <ul class="space-y-4 text-sm">
                <li>
                    <a class="hover:text-primary transition-colors" href="#"
                        >Surf & Olas</a
                    >
                </li>
                <li>
                    <a class="hover:text-primary transition-colors" href="#"
                        >Gastronomía</a
                    >
                </li>
                <li>
                    <a class="hover:text-primary transition-colors" href="#"
                        >Playas</a
                    >
                </li>
                <li>
                    <a class="hover:text-primary transition-colors" href="#"
                        >Transporte</a
                    >
                </li>
            </ul>
        </div>

        <div>
            <h3 class="text-white font-bold mb-6">Empresa</h3>

    <div
        class="max-w-7xl mx-auto pt-8 border-t border-slate-800 flex flex-col md:flex-row justify-between items-center gap-6"
    >
        <p class="text-xs">
            © 2026 spotstosurfperu. Todos los derechos reservados.
        </p>
        <div class="flex gap-8 text-xs font-bold uppercase tracking-wider">
            <a class="hover:text-white transition-colors" href="#"
                >Términos y Condiciones</a
            >
            <a class="hover:text-white transition-colors" href="#"
                >Política de Privacidad</a
            >
        </div>
    </div>
</footer>

<button
    class="fixed bottom-6 right-6 w-12 h-12 bg-white dark:bg-slate-800 rounded-full shadow-2xl flex items-center justify-center border border-slate-200 dark:border-slate-700 z-[60] group"
    id="theme-toggle"
>
    <span
        class="material-symbols-rounded text-slate-800 dark:text-white group-hover:rotate-45 transition-transform duration-300"
        >contrast</span
    >
</button>

<script is:inline>
    const toggle = document.getElementById("theme-toggle");
    toggle.addEventListener("click", () => {
        document.documentElement.classList.toggle("dark");
    });
</script>

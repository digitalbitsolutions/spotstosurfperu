---

<header
    class="fixed top-0 w-full z-50 glass-nav border-b border-white/20 transition-all duration-300 backdrop-blur-md"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
            <!-- Brand -->
            <a href="/" class="flex items-center gap-2 group">
                <img
                    src="/images/logo.webp"
                    alt="Spots to Surf Peru"
                    width="350"
                    height="167"
                    class="h-14 sm:h-16 w-auto object-contain group-hover:scale-105 transition-transform duration-300"
                    loading="eager"
                    decoding="async"
                />
            </a>

            <!-- Desktop Nav -->
            <nav class="hidden md:flex space-x-8 items-center">
                <a
                    href="/packages"
                    class="text-sm font-bold text-gray-600 hover:text-secondary uppercase tracking-wider transition-colors"
                >
                    Packages
                </a>
                <a
                    href="/destinations"
                    class="text-sm font-bold text-gray-600 hover:text-secondary uppercase tracking-wider transition-colors"
                >
                    Destinations
                </a>
                <a
                    href="/services"
                    class="text-sm font-bold text-gray-600 hover:text-secondary uppercase tracking-wider transition-colors"
                >
                    Experiences
                </a>
                <a
                    href="/about"
                    class="text-sm font-bold text-gray-600 hover:text-secondary uppercase tracking-wider transition-colors"
                >
                    About
                </a>
            </nav>

            <!-- CTA -->
            <div class="hidden md:flex items-center gap-4">
                <a
                    href="/#contact"
                    class="bg-primary hover:bg-orange-600 text-white px-6 py-2.5 rounded-full text-sm font-bold shadow-lg shadow-orange-500/20 transition-all hover:-translate-y-0.5 transform"
                >
                    Contact
                </a>
            </div>

            <!-- Mobile Button -->
            <button class="md:hidden text-gray-600 p-2">
                <span class="material-symbols-rounded text-3xl">menu</span>
            </button>
        </div>
    </div>
</header>


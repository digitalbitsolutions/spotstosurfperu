const checkoutBase =
    import.meta.env.PUBLIC_WP_CHECKOUT_BASE ??
    "/wp/checkout/?add-to-cart=";

const productBase =
    import.meta.env.PUBLIC_WP_PRODUCT_BASE ??
    (() => {
        // If checkoutBase is an absolute URL (common in local dev), derive:
        //   http://localhost:8081/checkout/?add-to-cart= -> http://localhost:8081/product/
        if (/^https?:\/\//i.test(checkoutBase)) {
            try {
                return new URL("../product/", checkoutBase).toString();
            } catch {
                // fall through to default
            }
        }

        // Production-safe default (relative). WP is exposed under /wp on the same host.
        return "/wp/product/";
    })();

const productUrl = (slug) => {
    const b = productBase.endsWith("/") ? productBase : `${productBase}/`;
    const s = String(slug).replace(/^\/+|\/+$/g, "");
    return `${b}${s}/`;
};


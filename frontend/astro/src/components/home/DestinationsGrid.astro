---
// frontend/astro/src/components/home/DestinationsGrid.astro
const packs = [
    {
        title: "Lima Surf",
        image: "/images/surf.webp",
        price: "US$ 240",
        description:
            "Guided surf across four Lima beaches with local support throughout the day.",
        includes:
            "Includes mandatory surf lessons and orientation at each spot.",
        highlights: [
            "Punta Rocas",
            "La Herradura",
            "Playa Norte",
            "San Bartolo",
        ],
    },
    {
        title: "Lima Kite Surf",
        image: "/images/kite.webp",
        price: "US$ 290",
        description:
            "Kitesurf across four south Lima beaches with safety and logistics support.",
        includes:
            "Includes mandatory kitesurf lessons and guidance at every session.",
        highlights: ["Playa Norte", "Senoritas", "Caballeros", "San Bartolo"],
    },
    {
        title: "Paragliding",
        image: "/images/paragliding.webp",
        price: "US$ 180",
        description:
            "1 class and an assisted paragliding flight with a certified instructor.",
        includes:
            "Includes 1 class, assisted flight, and safety briefing.",
        highlights: ["1 Class", "Assisted flight", "Instructor"],
    },
    {
        title: "Tandem",
        image: "/images/tandem.webp",
        price: "US$ 350",
        description:
            "1 class and 1 tandem jump with an expert jumpmaster, a retired Peruvian Navy commando.",
        includes:
            "Includes 1 class, 1 jump, and safety briefing.",
        highlights: ["1 Class", "1 Jump", "Expert instructor"],
    },
];
---

<section class="py-24 bg-gray-50/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <span
                class="inline-block px-4 py-1.5 rounded-full bg-blue-50 text-secondary text-xs font-bold uppercase tracking-widest border border-blue-200 mb-4"
            >
                Packs
            </span>
            <h2 class="font-serif text-5xl text-gray-900 leading-tight mb-4">
                Lima Adventure <span class="text-secondary">Packs</span>
            </h2>
            <p class="text-gray-500 max-w-2xl mx-auto">
                Four experiences designed for surf, kitesurf, paragliding, and
                tandem, with mandatory training and guidance.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            {packs.map((pack) => (
                <div class="bg-white rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 group flex flex-col">
                    <div class="h-48 overflow-hidden relative">
                        <img
                            src={pack.image}
                            alt={pack.title}
                            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                            loading="lazy"
                            decoding="async"
                            width="400"
                            height="300"
                        />
                        <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm text-gray-900 text-xs font-bold px-2 py-1 rounded-lg">
                            {pack.price}
                        </div>
                    </div>
                    <div class="p-6 flex-grow flex flex-col">
                        <h3 class="font-serif text-2xl font-bold text-gray-900">
                            {pack.title}
                        </h3>
                        <p class="text-sm text-gray-500 mt-3 mb-4">
                            {pack.description}
                        </p>
                        <p class="text-xs font-semibold text-secondary uppercase tracking-wide mb-3">
                            {pack.includes}
                        </p>
                        <div class="flex flex-wrap gap-2 mt-auto mb-5">
                            {pack.highlights.map((item) => (
                                <span class="text-[10px] bg-blue-50 px-2 py-1 rounded text-secondary font-bold">
                                    {item}
                                </span>
                            ))}
                        </div>
                        <button
                            type="button"
                            class="bg-secondary text-white px-5 py-2 rounded-xl font-bold shadow-lg shadow-blue-900/20 opacity-50 cursor-not-allowed"
                            disabled
                            aria-disabled="true"
                        >
                            Buy now
                        </button>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>


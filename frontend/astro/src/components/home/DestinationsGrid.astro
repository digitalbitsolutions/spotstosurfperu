---
// frontend/astro/src/components/home/DestinationsGrid.astro
import { travelPackages as packs } from "../../data/packages";
import { productUrl } from "../../lib/wpUrls";
---

<section class="py-24 bg-gray-50/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <span
                class="inline-block px-4 py-1.5 rounded-full bg-blue-50 text-secondary text-xs font-bold uppercase tracking-widest border border-blue-200 mb-4"
            >
                Packs
            </span>
            <h2 class="font-serif text-5xl text-gray-900 leading-tight mb-4">
                Adventure <span class="text-secondary">Packs</span>
            </h2>
            <p class="text-gray-500 max-w-2xl mx-auto">
                Eight curated packs built around Lima adventures and
                northbound surf routes, with lodging, meals, and transfers
                included.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            {packs.map((pack) => (
                <div
                    class={`bg-white rounded-3xl overflow-hidden border border-gray-100 group flex flex-col transition-all duration-300 ${
                        pack.featured
                            ? "shadow-2xl ring-2 ring-secondary/30"
                            : "shadow-lg hover:shadow-2xl"
                    }`}
                >
                    <div class="h-52 overflow-hidden relative">
                        <img
                            src={pack.image}
                            alt={pack.title}
                            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                            loading="lazy"
                            decoding="async"
                            width="400"
                            height="300"
                        />
                        <div class="absolute inset-0 bg-gradient-to-t from-slate-900/60 to-transparent"></div>
                        {pack.badge && (
                            <div class="absolute top-4 left-4 bg-white/90 backdrop-blur-sm text-gray-900 text-xs font-bold px-3 py-1 rounded-full">
                                {pack.badge}
                            </div>
                        )}
                        <div class="absolute top-4 right-4 bg-secondary text-white text-xs font-bold px-3 py-1 rounded-full shadow-lg">
                            {pack.price}
                        </div>
                    </div>
                    <div class="p-6 flex-grow flex flex-col">
                        {pack.meta && (
                            <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">
                                {pack.meta}
                            </p>
                        )}
                        <h3 class="font-serif text-2xl font-bold text-gray-900">
                            {pack.title}
                        </h3>
                        <p class="text-sm text-gray-600 mt-3 mb-4">
                            {pack.description}
                        </p>
                        <p class="text-xs font-semibold text-secondary uppercase tracking-wide mb-3">
                            {pack.includes}
                        </p>
                        <div class="flex flex-wrap gap-2 mt-auto mb-5">
                            {pack.highlights.map((item) => (
                                <span class="text-[10px] bg-blue-50 px-2 py-1 rounded text-secondary font-bold">
                                    {item}
                                </span>
                            ))}
                        </div>
                        <a
                            href={productUrl(pack.productSlug)}
                            class="bg-secondary text-white px-5 py-2 rounded-xl font-bold text-center shadow-lg shadow-blue-900/20 hover:bg-blue-700 transition"
                        >
                            {pack.ctaLabel}
                        </a>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>


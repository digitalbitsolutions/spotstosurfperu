---
// frontend/astro/src/pages/about.astro
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "About Us";
const description =
    "Learn more about Spots to Surf Peru and our passion for surfing.";
---

<BaseLayout title={title} description={description}>
    <div class="max-w-4xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold mb-4">{title}</h1>
        <p class="text-xl text-gray-600 mb-8">{description}</p>

        <div class="bg-gray-50 border border-gray-200 rounded-lg p-8">
            <h2 class="text-xl font-semibold mb-4">Our Mission</h2>
            <p class="mb-4">
                To provide the ultimate surf experience in Peru, combining local
                knowledge with premium service.
            </p>
            <h2 class="text-xl font-semibold mb-4 text-gray-800">
                Why Choose Us?
            </h2>
            <ul class="list-disc pl-5 space-y-2 text-gray-700">
                <li>Experienced local guides</li>
                <li>Premium accommodation partners</li>
                <li>Safety first approach</li>
                <li>Customized itineraries</li>
            </ul>
            <h2 class="text-xl font-semibold mb-4 mt-8 text-gray-800">
                Our Team
            </h2>
            <p>
                Meet the team of passionate surfers dedicated to making your
                trip unforgettable.
            </p>
        </div>
    </div>
</BaseLayout>

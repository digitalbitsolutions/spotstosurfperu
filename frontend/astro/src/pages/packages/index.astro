---
// frontend/astro/src/pages/packages/index.astro
import BaseLayout from "../../layouts/BaseLayout.astro";
import { travelPackages } from "../../data/packages";
import { checkoutUrl } from "../../lib/wpUrls";

const title = "Packages";
const description =
    "Choose from curated multi-day adventure packs across Peru. Surf, kitesurf, paragliding, tandem, and more, with seamless logistics.";
---

<BaseLayout title={title} description={description}>
    <section class="pt-32 pb-16 bg-gray-50/50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="max-w-3xl">
                <span
                    class="inline-block px-4 py-1.5 rounded-full bg-blue-50 text-secondary text-xs font-bold uppercase tracking-widest border border-blue-200 mb-4"
                >
                    Packages
                </span>
                <h1
                    class="font-serif text-5xl md:text-6xl text-gray-900 leading-tight"
                >
                    Pick your perfect <span class="text-secondary">Peru Pack</span>
                </h1>
                <p class="text-gray-600 text-lg mt-6">
                    Browse our most requested itineraries. Each pack can be
                    adjusted to match your dates, level, and group size.
                </p>

                <div class="mt-8 flex flex-col sm:flex-row gap-4">
                    <a
                        href="#packages-list"
                        class="bg-primary text-white px-8 py-3 rounded-xl font-bold hover:bg-opacity-90 transition-all shadow-lg shadow-orange-500/20 text-center"
                    >
                        Browse Packages
                    </a>
                    <a
                        href="/#contact"
                        class="px-8 py-3 rounded-xl font-bold border border-secondary text-secondary hover:bg-secondary hover:text-white transition-all text-center"
                    >
                        Request Information
                    </a>
                </div>

                <p class="mt-6 text-sm text-gray-600">
                    Groups and travel agencies: ask about discounted rates and
                    coordinated itineraries.
                </p>
            </div>
        </div>
    </section>

    <section id="packages-list" class="py-16 scroll-mt-24">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div
                class="flex flex-col md:flex-row md:items-end md:justify-between gap-6 mb-10"
            >
                <div class="max-w-2xl">
                    <h2 class="font-serif text-4xl md:text-5xl text-gray-900">
                        Available Packages
                    </h2>
                    <p class="text-gray-600 mt-4 text-lg">
                        Select a pack and book instantly, or contact us to
                        customize it.
                    </p>
                </div>
                <a
                    href="/#contact"
                    class="inline-flex items-center justify-center px-7 py-3 rounded-xl font-bold border border-gray-200 text-gray-800 bg-white hover:bg-gray-50 transition shadow-sm"
                >
                    Ask About Custom Options
                </a>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {travelPackages.map((pack, index) => (
                    <article
                        class={`bg-white rounded-3xl overflow-hidden border border-gray-100 group flex flex-col transition-all duration-300 ${
                            pack.featured
                                ? "shadow-2xl ring-2 ring-secondary/30"
                                : "shadow-lg hover:shadow-2xl hover:-translate-y-1"
                        }`}
                    >
                        <a
                            href={`/packages/${pack.productSlug}`}
                            class="block h-56 overflow-hidden relative"
                        >
                            <img
                                src={pack.image}
                                alt={pack.title}
                                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                                loading={index < 2 ? "eager" : "lazy"}
                                decoding="async"
                                width="700"
                                height="420"
                                fetchpriority={index === 0 ? "high" : "auto"}
                            />
                            <div class="absolute inset-0 bg-gradient-to-t from-slate-900/70 to-transparent"></div>

                            {pack.badge && (
                                <div class="absolute top-4 left-4 bg-white/90 backdrop-blur-sm text-gray-900 text-xs font-bold px-3 py-1 rounded-full">
                                    {pack.badge}
                                </div>
                            )}

                            {pack.price && (
                                <div class="absolute top-4 right-4 bg-secondary text-white text-xs font-bold px-3 py-1 rounded-full shadow-lg">
                                    {pack.price}
                                </div>
                            )}
                        </a>

                        <div class="p-7 flex-grow flex flex-col">
                            {pack.meta && (
                                <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">
                                    {pack.meta}
                                </p>
                            )}
                            <h3 class="font-serif text-2xl font-bold text-gray-900">
                                <a
                                    href={`/packages/${pack.productSlug}`}
                                    class="hover:underline decoration-secondary decoration-2 underline-offset-4"
                                >
                                    {pack.title}
                                </a>
                            </h3>
                            <p class="text-sm text-gray-600 mt-3 mb-4">
                                {pack.description}
                            </p>
                            <p class="text-xs font-semibold text-secondary uppercase tracking-wide mb-3">
                                {pack.includes}
                            </p>

                            <div class="flex flex-wrap gap-2 mt-auto mb-6">
                                {pack.highlights.map((item) => (
                                    <span class="text-[10px] bg-blue-50 px-2 py-1 rounded text-secondary font-bold">
                                        {item}
                                    </span>
                                ))}
                            </div>

                            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                                <a
                                    href={`/packages/${pack.productSlug}`}
                                    class="px-5 py-2.5 rounded-xl font-bold text-center border border-gray-200 text-gray-800 hover:bg-gray-50 transition"
                                >
                                    View Details
                                </a>
                                <a
                                    href={checkoutUrl(pack.productId)}
                                    class="bg-primary text-white px-5 py-2.5 rounded-xl font-bold text-center shadow-lg shadow-orange-500/20 hover:bg-orange-700 transition"
                                >
                                    Book Now
                                </a>
                            </div>
                        </div>
                    </article>
                ))}
            </div>
        </div>
    </section>

    <section class="py-20 bg-secondary">
        <div
            class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-white grid grid-cols-1 lg:grid-cols-2 gap-10 items-center"
        >
            <div>
                <span
                    class="inline-block px-4 py-1.5 rounded-full bg-white/10 text-white text-xs font-bold uppercase tracking-widest border border-white/20 mb-4"
                >
                    Need Help Choosing?
                </span>
                <h2 class="font-serif text-4xl md:text-5xl leading-tight">
                    Tell us your dates and we will recommend the best pack.
                </h2>
                <p class="text-white/85 mt-5 text-lg">
                    We can adjust any package with extra experiences, transport,
                    and custom timing. For groups and travel agencies, we offer
                    discounts and coordinated logistics.
                </p>
            </div>
            <div class="flex flex-col sm:flex-row gap-4 lg:justify-end">
                <a
                    href="/#contact"
                    class="bg-white text-secondary px-7 py-3 rounded-xl font-bold shadow-lg shadow-black/20 text-center"
                >
                    Request Information
                </a>
                <a
                    href="/services"
                    class="border border-white/50 text-white px-7 py-3 rounded-xl font-bold hover:bg-white/10 transition text-center"
                >
                    Explore Experiences
                </a>
            </div>
        </div>
    </section>
</BaseLayout>


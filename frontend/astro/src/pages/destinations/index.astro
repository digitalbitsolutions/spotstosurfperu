---
// frontend/astro/src/pages/destinations/index.astro
import BaseLayout from "../../layouts/BaseLayout.astro";

const title = "Destinations";
const description =
    "Explore Peru's surf coast from Lima to Mancora, with iconic breaks and beach towns.";

const destinations = [
    {
        name: "Punta Rocas",
        location: "Punta Negra, Lima - Peru",
        image: "/images/puntarocas.webp",
        summary:
            "A flagship competition venue in Punta Negra, known for consistent surf and a rocky reef break that peels both left and right.",
        highlights: ["Competition Venue", "Reef Break", "Left & Right"],
    },
    {
        name: "La Herradura",
        location: "Chorrillos, Lima - Peru",
        image: "/images/laherradura.webp",
        summary:
            "A strong, long left-hand wave with three distinct sections. Powerful and not suitable for beginners when it is firing.",
        highlights: ["Long Left", "Three Sections", "Advanced"],
    },
    {
        name: "Huanchaco",
        location: "Trujillo, La Libertad - Peru",
        image: "/images/surf.webp",
        summary:
            "Peru's first World Surfing Reserve, recognized for wave quality, consistency, and deep surf culture along the coast.",
        highlights: ["World Surfing Reserve", "Consistency", "Surf Culture"],
    },
    {
        name: "Chicama",
        location: "Puerto Malabrigo, La Libertad - Peru",
        image: "/images/chicama.webp",
        summary:
            "Legendary lefts that can be ridden for minutes and connect along the cape. Protected as Peru's first wave in the national registry.",
        highlights: ["Endless Lefts", "Protected Wave", "Iconic"],
    },
    {
        name: "Pacasmayo",
        location: "Pacasmayo, La Libertad - Peru",
        image: "/images/pacasmayo.webp",
        summary:
            "A super-long left-hand point break at Playa El Faro, famous for smooth, extended rides and reliable swells.",
        highlights: ["Point Break", "Long Rides", "Consistent"],
    },
    {
        name: "Lobitos",
        location: "Talara, Piura - Peru",
        image: "/images/lobitos.webp",
        summary:
            "A surf-focused beach town with 26 km of coastline and 13 wave breaks. It attracts visitors mainly for surfing and protected waves.",
        highlights: ["Multiple Breaks", "Surf Town", "Protected Waves"],
    },
    {
        name: "Cabo Blanco",
        location: "Talara, Piura - Peru",
        image: "/images/caboblanco.webp",
        summary:
            "A noted northern surf break with a heavy, fast left-hand barrel that breaks shallow and demands experience.",
        highlights: ["Heavy Barrels", "Shallow", "Expert"],
    },
    {
        name: "Mancora",
        location: "Talara, Piura - Peru",
        image: "/images/costaperuana.webp",
        summary:
            "A beach resort town recognized for favorable conditions for surfing and other water activities in Peru's north.",
        highlights: ["Surf Friendly", "Beach Resort", "Water Sports"],
    },
];
---

<BaseLayout title={title} description={description}>
    <section class="pt-32 pb-16 bg-gray-50/50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="max-w-3xl">
                <span
                    class="inline-block px-4 py-1.5 rounded-full bg-blue-50 text-secondary text-xs font-bold uppercase tracking-widest border border-blue-200 mb-4"
                >
                    Destinations
                </span>
                <h1
                    class="font-serif text-5xl md:text-6xl text-gray-900 leading-tight"
                >
                    Peru's Surf Coast: <span class="text-secondary">Lima to
                    Mancora</span>
                </h1>
                <p class="text-gray-600 text-lg mt-6">
                    Follow the northbound route from Lima to Peru's northern
                    beaches. Each stop brings a distinct wave, vibe, and surf
                    experience.
                </p>
                <div class="mt-8 flex flex-col sm:flex-row gap-4">
                    <a
                        href="/#contact"
                        class="bg-primary text-white px-8 py-3 rounded-xl font-bold hover:bg-opacity-90 transition-all shadow-lg shadow-orange-500/20 text-center"
                    >
                        Plan Your Route
                    </a>
                    <a
                        href="/packages"
                        class="px-8 py-3 rounded-xl font-bold border border-secondary text-secondary hover:bg-secondary hover:text-white transition-all text-center"
                    >
                        View Packages
                    </a>
                </div>
            </div>
        </div>
    </section>

    <section class="py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 space-y-12">
            {
                destinations.map((spot, index) => (
                    <article class="grid grid-cols-1 lg:grid-cols-[minmax(0,1fr)_minmax(0,1.1fr)] gap-10 items-center bg-white rounded-3xl shadow-lg p-6 md:p-8">
                        <div class="relative h-64 md:h-72 rounded-2xl overflow-hidden">
                            <img
                                src={spot.image}
                                alt={`${spot.name} beach in ${spot.location}`}
                                class="w-full h-full object-cover"
                                loading={index === 0 ? "eager" : "lazy"}
                                decoding="async"
                                width="720"
                                height="480"
                                fetchpriority={index === 0 ? "high" : "auto"}
                            />
                            <div class="absolute top-4 left-4 bg-white/90 backdrop-blur-sm text-gray-900 text-xs font-bold px-2.5 py-1 rounded-lg">
                                Stop {index + 1}
                            </div>
                        </div>
                        <div class="flex flex-col">
                            <span class="text-xs font-bold text-secondary uppercase tracking-wide">
                                {spot.location}
                            </span>
                            <h2 class="font-serif text-3xl md:text-4xl text-gray-900 mt-2">
                                {spot.name}
                            </h2>
                            <p class="text-gray-600 text-base mt-4">
                                {spot.summary}
                            </p>
                            <div class="flex flex-wrap gap-2 mt-6">
                                {spot.highlights.map((tag) => (
                                    <span class="text-[11px] bg-blue-50 px-3 py-1 rounded-full text-secondary font-bold">
                                        {tag}
                                    </span>
                                ))}
                            </div>
                        </div>
                    </article>
                ))
            }
        </div>
    </section>

    <section class="py-20 bg-secondary">
        <div
            class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-white grid grid-cols-1 lg:grid-cols-2 gap-10 items-center"
        >
            <div>
                <span
                    class="inline-block px-4 py-1.5 rounded-full bg-white/10 text-white text-xs font-bold uppercase tracking-widest border border-white/20 mb-4"
                >
                    Ready to Paddle Out
                </span>
                <h2 class="font-serif text-4xl md:text-5xl leading-tight">
                    Build your custom surf itinerary.
                </h2>
                <p class="text-white/80 mt-5 text-lg">
                    Share your dates, surf level, and must-ride waves. We'll
                    craft a seamless route from Lima to the north.
                </p>
            </div>
            <div class="flex flex-col sm:flex-row gap-4 lg:justify-end">
                <a
                    href="/#contact"
                    class="bg-white text-secondary px-7 py-3 rounded-xl font-bold shadow-lg shadow-black/20 text-center"
                >
                    Talk to a Trip Designer
                </a>
                <a
                    href="/packages"
                    class="border border-white/50 text-white px-7 py-3 rounded-xl font-bold hover:bg-white/10 transition text-center"
                >
                    Explore Packages
                </a>
            </div>
        </div>
    </section>
</BaseLayout>
